extends layout

block content
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/location", method="get", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="assignment") Name
          .col-xs-12.col-sm-10
            input#assignment.form-control(name="assignment")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="duedate") Due Date
          .col-xs-12.col-sm-10
            input#name.form-control(name="duedate")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="points") Points
          .col-xs-12.col-sm-10
            input#points.form-control(name="points")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="rating") Status
          .col-xs-12.col-sm-3
            select#rating.form-control.input-sm(name="rating")
              option Not Started
              option In Progress
              option Complete
              option Turned In
        button.btn.btn-default.pull-right Add Assignment
    .col-xs-12.col-md-4