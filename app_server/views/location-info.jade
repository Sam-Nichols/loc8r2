extends layout

include _includes/sharedHTMLfunctions

block content
  .row.page-header: .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-9
      .row
        .col-xs-12.col-sm-6
          p= location.room
          p= location.students
          a.btn.btn-default.pull-right(href="/location/review/new") Add Assignment
      .row
        .col-xs-12
          .panel-body.review-container
            each review in location.reviews
              .row
                .review
                  .well.well-sm.review-header
                    span.reviewAuthor #{review.assignment}
                  .col-xs-12
                    p #{review.duedate}
                    p !{(review.points)}
                    p #{review.status}